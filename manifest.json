{
    "name": "Enable right click",
    "version": "0.0.6",
    "manifest_version": 2,
    "default_locale": "en",
    "icons": {
        "48": "img/icon48.png"
    },
    "browser_action": {
        "default_title": "Disable right click",
        "default_icon": "img/icon128.png",
        "default_popup": "src/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "all_frames": true,
            "js" : [
                "src/content_scripts.js"
            ]
        }
    ],
    "permissions": [
        "storage"
    ],
    "web_accessible_resources" : [
        "/web_accessible_resources/index.js"
    ]
}